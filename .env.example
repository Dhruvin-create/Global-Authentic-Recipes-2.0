# Smart Search System - Environment Configuration

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=mysql://root:password@localhost:3306/recipes_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=recipes_db

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# AI Provider Configuration
# ============================================
# Options: 'openai' or 'claude'
AI_PROVIDER=openai
AI_MODEL_VERSION=gpt-4-turbo-2024-04-09

# OpenAI API
OPENAI_API_KEY=sk-...your-key-here...
OPENAI_MODEL=gpt-4-turbo

# Anthropic/Claude API
# ANTHROPIC_API_KEY=sk-ant-...your-key-here...
# CLAUDE_MODEL=claude-3-sonnet-20240229

# ============================================
# Google Maps API Configuration
# ============================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...your-google-maps-api-key-here...
GOOGLE_MAPS_API_KEY=AIza...your-google-maps-api-key-here...

# ============================================
# External Source APIs
# ============================================
# USDA FDC API (free, public domain)
USDA_API_KEY=YOUR_USDA_KEY_HERE

# Optional: WikipediaAPI, OpenFoodFacts credentials
# WIKIPEDIA_API_KEY=
# OPENFOODFACTS_API_KEY=

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# ============================================
# Rate Limiting
# ============================================
# Search requests per minute (IP-based)
RATE_LIMIT_SEARCH=100

# Auto-find requests per day (IP-based)
RATE_LIMIT_AUTOFIND_DAILY=5

# Auto-find requests per day (authenticated users)
RATE_LIMIT_AUTOFIND_AUTHENTICATED_DAILY=50

# ============================================
# Cache Configuration
# ============================================
# Search result cache TTL (seconds)
CACHE_SEARCH_TTL=600

# Recipe detail cache TTL (seconds)
CACHE_RECIPE_TTL=1800

# ============================================
# AI Safety & Moderation
# ============================================
# Min confidence score for auto-publish (0.0-1.0)
AI_MIN_CONFIDENCE_FOR_AUTO_PUBLISH=0.85

# Flag for mandatory human review if confidence below threshold
AI_MIN_CONFIDENCE_THRESHOLD=0.7

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CORS & Security
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
